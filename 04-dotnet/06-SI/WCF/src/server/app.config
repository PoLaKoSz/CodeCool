<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
  </startup>
  <system.sericeModel>
    <services>
      <service name="PoLaKoSz.CodeCool.Dotnet.WCF.Calculator"
               behaviorConfiguration="metadataBehavior">
        <endpoint address="CalculatorService"
                  binding="basicHttpBindig"
                  contract="PoLaKoSz.CodeCool.Dotnet.WCF.IDerivativesCalculator" />
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8000/Derivatives/" />
            <add baseAddress="tcp.net://localhost:8000/Derivatives/" />
          </baseAddresses>
        </host>
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="metadataBehavior">
          <serviceMetadata httpGetEnabled="true" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.sericeModel>
</configuration>
